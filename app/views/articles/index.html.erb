<div class="container">
  <%= render 'shared/featured'%>
  <div class="row">
    <div class="col-md-8">
      <% @articles.each do |article| %>
        <div class="card mt-3">
          <%= image_tag article.image %>
          <div class="card-header">
            <h3><%= link_to article.title, article_path(article.id) %></h3>
          </div>
          <div class="card-body">
            <h4><%= truncate(article.content, length: 350) %></h4>
            <%= link_to "Read more", article_path(article.id), class: 'btn btn-primary' %>
            <h6><%= article.created_at.strftime("%Y/%m/%d") %> by <%= article.user.name %> </h6>
            <div class="list-group">
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <div class="btn btn-outline-success">
                  <%= like_or_dislike_btn(article) %>
                </div>
                <span class="badge badge-primary badge-pill">
                  <%= article.likes.count %> likes!
                </span>
              </li>
            </div>
          </div>
        </div>
      <% end %>
      <div class="digg_pagination">
        <div class="page_info">
          <%= page_entries_info @articles %>
        </div>
        <%= will_paginate @articles, :container => false %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card mt-3">
        <div class="card-header">
          Categories
        </div>
        <div class="card-body">
          <div class="list-group">
            <% @categories.each do |category| %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <%= link_to category.category, articles_path(:cate => category.id) %>
                <span class="badge badge-primary badge-pill">
                  <%= category.articles.count %>
                </span>
              </li>
            <% end %>
            <%= link_to "Create Category", new_category_path, class: 'btn btn-outline-primary' %>
            <%= link_to "All Categories", categories_path, class: 'btn btn-outline-primary mt-1' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
