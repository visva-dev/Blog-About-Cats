<div class="container">
  <div class="card bg-dark mt-2">
    <% popular = Like.popular %>
    <% popular.each do |vote| %>
      <%= image_tag vote.article.image, class: "card-img ", :size => '100%xauto' %>
      <div class="card-img-overlay font-weight-bold">
        <h5 class="card-title font-weight-bold"><%= vote.article.title %></h5>
        <p class="card-text"><%= truncate(vote.article.content, length: 250) %></p>
        <p class="lead mb-0">
          <%= link_to 'Read more', article_path(vote.article), class: 'text-dark' %>
        </p>
      </div>
    <% end %>
  </div>
  <div class="card-group mt-2">
    <% @categories.each do |category| %>
      <div class="card">
        <%= image_tag category.articles.last.image, class: "card-img-top" %>
        <div class="card-body">
          <h5 class="card-title"><%= category.articles.last.title %></h5>
          <p class="card-text"><%= truncate(category.articles.last.content, length: 100) %></p>
          <p class="card-text"><small class="text-muted"><%= category.articles.last.created_at.strftime("%Y/%m/%d") %> </small></p>
          <strong class="d-inline-block mb-2 text-success"><%= category.category %></strong>
          <p><%= link_to 'Read more', article_path(category.articles.last), class: 'btn btn-primary' %></p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-8">
      <% @articles.each do |article| %>
        <div class="card mt-3">
          <%= image_tag article.image unless article.image.nil? %>
          <div class="card-header">
            <h3><%= link_to article.title, article_path(article.id) %></h3>
          </div>
          <div class="card-body">
            <h4><%= truncate(article.content, length: 350) %></h4>
            <%= link_to "Read more", article_path(article.id), class: 'btn btn-primary' %>
            <h6><%= article.created_at.strftime("%Y/%m/%d") %> by <%= article.user.name if article.user %> </h6>
          </div>
          <% if user_signed_in? %>
            <%= like_or_dislike_btn(article) %>
            <%= article.likes.count %>
          <% end %>
        </div>
      <% end %>
      <%= paginate @articles %>
    </div>
    <div class="col-md-4">
      <div class="card mt-3">
        <div class="card-header">
          Categories
        </div>
        <div class="card-body">
          <div class="list-group">
            <% @categories.each do |category| %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <%= link_to category.category, articles_path(:cate => category.id) %>
                <span class="badge badge-primary badge-pill">
                  <%= category.articles.count %>
                </span>
              </li>
            <% end %>
            <% if user_signed_in? %>
              <%= link_to "Create Category", new_category_path %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
