<div class="flex-row d-flex justify-content-center">
  <div class="card mt-5">
    <div class="card-body">
      <p id="notice"><%= notice %></p>
      <h1>Categories</h1>
      <table>
        <thead>
          <tr>
            <th>Category</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.category %></td>
              <td><%= link_to 'Show', category, class: 'btn btn-primary' %></td>
                <td><%= link_to 'Edit', edit_category_path(category), class: 'btn btn-outline-secondary' %></td>
                <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
        <%= link_to 'New Category', new_category_path, class: 'btn btn-primary' %>
        <%= link_to 'Back', root_path, class: 'btn btn-outline-secondary' %>
    </div>
  </div>
</div>
