<div class="flex-row d-flex justify-content-center">
  <div class="card mt-5">
    <div class="card-body">
      <%= form_with(model: category, local: true) do |form| %>
        <%= form_errors_for category %>
        <%= yield :form_errors %>
        <div class="form-group">
          <%= form.label :category %>
          <%= form.text_field :category, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.submit %>
          <%= link_to "Back", categories_path, class: 'btn btn-outline-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
